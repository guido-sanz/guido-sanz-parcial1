@model guido_sanz_parcial1.ViewModels.MotoCreateViewModel;

@{
    ViewData["Title"] = "Create";
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
<h1>Crear nueva moto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Moto.Brand" class="control-label"></label>
                <input asp-for="Moto.Brand" class="form-control" />
                <span asp-validation-for="Moto.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moto.Model" class="control-label"></label>
                <input asp-for="Moto.Model" class="form-control" />
                <span asp-validation-for="Moto.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moto.CubicCentimeters" class="control-label"></label>
                <input asp-for="Moto.CubicCentimeters" class="form-control" />
                <span asp-validation-for="Moto.CubicCentimeters" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Moto.Type" class="control-label"></label>
                <select asp-for="Moto.Type" class="form-control">
                    <option value="0">Scooter</option>
                    <option value="1">Naked</option>
                    <option value="2">Touring</option>
                    <option value="3">Sport</option>
                    <option value="4">Super-Sport</option>
                    <option value="5">Enduro</option>
                    <option value="6">Street</option>
                    <option value="7">Custom</option>
                </select>
                <span asp-validation-for="Moto.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Seleccione accesorios</label>
                <select multiple name="SelectedAccesories" class="form-control">
                    @if (Model.Accesories != null)
                    {
                        @foreach (var accessory in Model.Accesories)
                        {
                            <option value="@accessory.Id">@accessory.Name</option>
                        }
                    }else{
                        <option value="">No hay motos disponibles</option>
                    }                   
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Moto.Price" class="control-label"></label>
                <input asp-for="Moto.Price" class="form-control" />
                <span asp-validation-for="Moto.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
