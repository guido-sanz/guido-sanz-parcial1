@model guido_sanz_parcial1.ViewModels.RolesSearchViewModel;

<div class="container">
  <h3 class="mb-4 text-center">Gesti√≥n de Roles</h3>

  <form method="get" asp-action="Index" class="row g-3 justify-content-center">
    <div class="col-auto">
      <input class="form-control" asp-for="nameFilter" placeholder="Nombre" />
    </div>
    <div class="col-auto">
      <button class="btn btn-primary" type="submit">Buscar roles</button>
    </div>
  </form>

  <div class="d-flex justify-content-center mt-2">
    <div class="table-responsive" style="width: 50%;">
      <table class="table table-striped table-bordered">
        <thead class="thead-light">
          <tr>
            <th>Nombre usuario</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model.Roles)
          {
            <tr>
              <td>
                @Html.DisplayFor(modelItem => item.Name)
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>

  <div class="text-center mt-2">
    <a class="btn btn-success" asp-action="Create">Crear nuevo rol</a>
  </div>
</div>