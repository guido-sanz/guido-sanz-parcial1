@using guido_sanz_parcial1.ViewModels;
@model guido_sanz_parcial1.ViewModels.UserSearchViewModel;

<h3 class="mb-4 text-center">Gesti√≥n de Usuarios</h3>
<form method="get" asp-action="Index" class="row g-3 justify-content-center">
    <div class="col-auto">
        <input class="form-control" asp-for="UsernameFilter" placeholder="Nombre usuario"/>        
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Buscar</button>          
    </div>
</form>
<div class="d-flex justify-content-center mt-2">
    <div class="table-responsive" style="width: 50%;">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nombre usuario</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-primary btn-sm me-2" asp-action="Edit" asp-route-id="@item.Id">Asignar Role</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>