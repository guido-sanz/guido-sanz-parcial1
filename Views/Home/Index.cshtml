@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <h1>Bienvenido a gestión de agencias</h1>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="text-center">
            <a class="btn btn-outline-danger" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
            <a class="btn btn-outline-danger" asp-area="Identity" asp-page="/Account/Login">Iniciar sesión</a>
        </div>
    </div>
}
