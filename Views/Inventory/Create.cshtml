@model guido_sanz_parcial1.ViewModels.InventoryCreate

@{
    ViewData["Title"] = "Create";
}

<h1>Agregar moto al inventario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Inventory.Moto.Brand" class="control-label"></label>
                <select asp-for="Inventory.MotoId" class="form-control">
                    @if (Model.Motos != null && Model.Motos.Count > 0){
                        @foreach (var item in Model.Motos) {
                            <option value="@item.Id">@item.Brand @item.Model</option>
                        }
                    }else{
                        <option value="">No hay motos disponibles</option>
                    }                   
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.Quantity" class="control-label"></label>
                <input asp-for="Inventory.Quantity" class="form-control" type="number" value="1"/>
                <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Inventory.AgencyId" value=@Model.AgencyId/>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}