@model guido_sanz_parcial1.ViewModels.AgencyViewModel;

@{
    ViewData["Title"] = "Index";
}

    <div class="container">
        <h1>Listado de agencias de motos</h1>

        <form method="get" asp-action="Index" class="row g-3">
            <div class="col-auto">
                <input class="form-control" asp-for="NameFilter" placeholder="Nombre agencia o direcciÃ³n"/>                       
            </div>
            <div class="col-auto">
                <button class="col-auto btn btn-primary" type="submit">Buscar</button>   
            </div>
        </form>
        <table class="table table-hover table-responsive max-width-75">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Agency.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Agency.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Agency.Phone)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody >
            @foreach (var item in Model.Agencys) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        <div>
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-primary btn-sm mr-2" asp-action="Details" asp-route-id="@item.Id">Inventario</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </td>
                </tr>
        }
            </tbody>
        </table>
        <div>
            <a class="btn btn-success" asp-action="Create">Crear nueva agencia</a>
        </div>
    </div>   

